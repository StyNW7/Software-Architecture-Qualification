generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement()) // Keeps ID synced with Auth
  username  String   @unique
  // No password here, separate concern
  createdAt DateTime @default(now())
}